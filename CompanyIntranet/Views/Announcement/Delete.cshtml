@model CompanyIntranet.DTOs.AnnouncementDto

@{
    ViewData["Title"] = "Duyuru Sil";
}

<h1>Duyuru Sil</h1>

<h4>Bu duyuruyu silmek istediğinize emin misiniz?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Başlık</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">İçerik</dt>
        <dd class="col-sm-10">@Model.Content</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">Vazgeç</a>
</form>
