@model CompanyIntranet.Models.Announcement

@{
    ViewData["Title"] = "Duyuru Detayları";
}

<h1>Duyuru Detayı</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Başlık</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">İçerik</dt>
        <dd class="col-sm-10">@Model.Content</dd>

        <dt class="col-sm-2">Oluşturan</dt>
        <dd class="col-sm-10">@Model.CreatedBy</dd>

        <dt class="col-sm-2">Oluşturulma Tarihi</dt>
        <dd class="col-sm-10">@Model.CreatedAt</dd>

        <dt class="col-sm-2">Değiştirilme Tarihi</dt>
        <dd class="col-sm-10">@Model.UpdatedAt</dd>

    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Güncelle</a>
<a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
